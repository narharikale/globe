// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model City {
  id        Int      @id @default(autoincrement())
  city      String
  country   String
  clues     Clue[]
  funFacts  FunFact[]
  trivias   Trivia[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([city, country])
}

model Clue {
  id        Int      @id @default(autoincrement())
  text      String
  cityId    Int
  city      City     @relation(fields: [cityId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FunFact {
  id        Int      @id @default(autoincrement())
  text      String
  cityId    Int
  city      City     @relation(fields: [cityId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Trivia {
  id        Int      @id @default(autoincrement())
  text      String
  cityId    Int
  city      City     @relation(fields: [cityId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}